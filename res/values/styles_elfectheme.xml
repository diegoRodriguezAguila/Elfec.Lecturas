    <style name="AppStyle.Button.Orange" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/orange_carrot</item>
        <item name="colorControlHighlight">@color/orange_carrot_pressed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="AppStyle.Button.Purple" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/purple_wisteria</item>
        <item name="colorControlHighlight">@color/purple_wisteria_pressed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarElfecTheme" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="contentInsetStart">8dp</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="titleTextStyle">@style/AppStyle.ActionBar.TextStyle</item>
    </style>

    <style name="AppStyle.ActionBar.TextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="EditTextElfecTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/elfectheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextViewElfecTheme" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/elfectheme_list_selector_holo_light</item>
        <item name="android:background">@drawable/elfectheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxElfecTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/elfectheme_btn_check_holo_light</item>
    </style>

    <style name="RadioButtonElfecTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/elfectheme_btn_radio_holo_light</item>
