    <style name="ButtonElfecTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageButtonElfecTheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/elfectheme_btn_default_holo_light</item>
    </style>

    <style name="SpinnerElfecTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/elfectheme_spinner_background_holo_light</item>
