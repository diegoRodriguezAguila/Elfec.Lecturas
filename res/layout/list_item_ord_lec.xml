<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/list_item_ordenativo" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"/>

    <LinearLayout
        android:id="@+id/seccion_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="end" >

        <TextView
            android:id="@+id/lbl_agregado_el"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregado_el"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue_peter_river"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_fecha_ord_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_fecha"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_a_las"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_las"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue_peter_river"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_hora_ord_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_hora"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>