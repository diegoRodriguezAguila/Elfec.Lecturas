<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top_margin"
    tools:context=".ResumenLecturas" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_ruta_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ruta_lbl"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/select_ruta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="2" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_num_lecturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numero_lecturas_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_numero_lecturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_realizadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_realizadas_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_realizadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_pendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_pendientes_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_pendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_normales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_normales_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_normales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_entre_lineas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_entre_lineas_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_entre_lineas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_impedidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_impedidas_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_impedidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_postergadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_postergadas_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_postergadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_reintentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_reintentar_lbl"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_lecturas_reintentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Medium"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_lecturas_totales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturas_totales_lbl"
            android:textAppearance="@style/TextAppearance.CustomFont.Light"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_lecturas_totales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/sample_num_lecturas"
            android:textAppearance="@style/TextAppearance.CustomFont.Light"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>