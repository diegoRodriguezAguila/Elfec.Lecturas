<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/elfectheme_color"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/dialog_vertical_margin"
        android:paddingLeft="@dimen/dialog_horizontal_margin"
        android:paddingRight="@dimen/dialog_horizontal_margin"
        android:paddingTop="@dimen/dialog_vertical_margin" >
    
    <ImageView 
        android:visibility="gone"
	    android:id="@+id/icon_left"
	    android:contentDescription="@string/blank" 
	    android:layout_marginRight="10dp"
	    android:layout_gravity="center"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />
    
    
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/dialog_message"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:padding="@dimen/dialog_message_margin"
	    android:gravity="left|center_vertical"
	    android:orientation="horizontal" >
	<ProgressBar
        android:id="@+id/custom_progressbar"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/clock"
        android:indeterminateDrawable="@drawable/custom_progress_indeterminate" />
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_message"
            android:gravity="left|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
    </LinearLayout>
    <View
        android:id="@+id/separator_buttons"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_marginLeft="@dimen/dialog_horizontal_margin"
	    android:layout_marginRight="@dimen/dialog_horizontal_margin"
	    android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:id="@+id/dialog_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:paddingTop="@dimen/dialog_vertical_button_margin"
	    android:paddingBottom="@dimen/dialog_vertical_button_margin"
	    android:paddingLeft="@dimen/dialog_horizontal_button_margin"
	    android:paddingRight="@dimen/dialog_horizontal_button_margin"
	    android:orientation="horizontal" >
    <Button 
	    android:id="@+id/btn_ok"
	    android:text="@string/btn_ok" 
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"/>
    <Button 
	    android:id="@+id/btn_neutral"
	    android:layout_weight="1"
	    android:text="@string/btn_neutral" 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"/>
    <Button 
	    android:id="@+id/btn_cancel"
	    android:layout_weight="1"
	    android:text="@string/btn_cancel" 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
