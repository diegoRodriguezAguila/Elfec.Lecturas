<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:background="@android:color/white">

    <TextView
        android:id="@+id/lbl_pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/potencia_lbl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_e_reactiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_pot"
        android:layout_marginTop="10dp"
        android:text="@string/energia_reactiva_lbl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   <TextView
       android:id="@+id/lbl_potencia"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/lbl_pot"
       android:layout_toRightOf="@+id/lbl_pot"
       android:layout_marginLeft="4dp"
       android:text="@string/sample_default_potencia"
       android:textStyle="bold" 
       android:textAppearance="?android:attr/textAppearanceMedium">

    </TextView>

   <EditText
        android:id="@+id/txt_reactiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_e_reactiva"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lbl_e_reactiva"
        android:ems="10"
        android:maxLength="8"
        android:inputType="numberDecimal"/>

	<EditText
	    android:id="@+id/txt_demanda"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/lbl_demanda"
	    android:layout_toRightOf="@+id/lbl_demanda"
	    android:ems="10"
	    android:maxLength="15"
	    android:inputType="numberDecimal" > 
        <requestFocus />
        </EditText>

	<TextView
	    android:id="@+id/lbl_demanda"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/lbl_e_reactiva"
	    android:text="@string/demanda_lbl"
	    android:layout_marginTop="10dp"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	
	<View
	    android:id="@+id/separator_buttons"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/lbl_demanda"
	    android:background="@android:color/darker_gray" 
	    android:layout_marginTop="25dp" />

	<Button
	    android:id="@+id/btn_aceptar"
	    android:layout_width="132dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginTop="2dp"
	    android:layout_below="@+id/separator_buttons"
	    android:text="@string/btn_ok" />

	<Button
	    android:id="@+id/btn_cancelar"
	    android:layout_width="132dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/btn_aceptar"
	    android:layout_alignBottom="@+id/btn_aceptar"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="2dp"
	    android:text="@string/cancelar_btn" />

	<TextView
	    android:id="@+id/lbl_val_reactiva"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/lbl_e_reactiva"
	    android:layout_toRightOf="@+id/lbl_e_reactiva"
	    android:layout_marginLeft="4dp"
	    android:text="@string/sample_default_potencia"
	    android:textStyle="bold" 
	    android:textAppearance="?android:attr/textAppearanceMedium" />
	
	<TextView
	    android:id="@+id/lbl_val_demanda"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/lbl_demanda"
	    android:layout_toRightOf="@+id/lbl_demanda"
	    android:layout_marginLeft="4dp"
	    android:text="@string/sample_default_potencia"
	     android:textStyle="bold" 
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
