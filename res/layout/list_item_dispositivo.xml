<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/white" >
    
<ImageView
        android:id="@+id/img_impresora"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/blank"
        android:background="@color/blue_peter_river"
        android:gravity="center"
        android:src="@drawable/impresora"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_nombre_dispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_impresora"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/img_impresora"
        android:layout_toEndOf="@+id/img_impresora"
        android:text="@string/sample_nombre_dispositivo"
        android:gravity="top"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_mac_dispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" 
        android:layout_below="@+id/lbl_nombre_dispositivo"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/img_impresora"
        android:layout_toEndOf="@+id/img_impresora"
        android:text="@string/sample_mac_address"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
